  </object>-->


  <!-- 用物件名稱指定, 指定 AOP 要掛在哪一個物件上 -->
  <!-- InterceptorNames = AOP Advice, ObjectNames = Object Names (可用 * 來搜尋多物件). -->

  <!--<object id="serviceProxyCreator" type="Spring.Aop.Framework.AutoProxy.ObjectNameAutoProxyCreator, Spring.Aop">
